generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum PlanType {
  free
  pro
  enterprise
}

model Company {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  plan      PlanType @default(free)
  widgets   Widget[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Widget {
  id            String    @id @default(uuid())
  widgetKey     String    @unique
  name          String
  companyId     String
  company       Company   @relation(fields: [companyId], references: [id])
  isActive      Boolean   @default(true)
  accentColor   String    @default("#007bff")
  logoUrl       String?
  chatLogs      ChatLog[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([widgetKey])
  @@index([companyId])
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  isAdmin   Boolean  @default(false)
  chatLogs  ChatLog[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model FAQ {
  id        String   @id @default(uuid())
  question  String
  answer    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ChatLog {
  id        String   @id @default(uuid())
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  widgetId  String?
  widget    Widget?  @relation(fields: [widgetId], references: [id])
  question  String
  answer    String
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([widgetId])
}
